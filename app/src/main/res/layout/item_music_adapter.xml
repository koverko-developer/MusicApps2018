<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/veiw"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/vk_white"
    android:orientation="horizontal"
    android:paddingBottom="8dp"
    android:paddingLeft="16dp"
    android:paddingRight="8dp"
    android:paddingTop="8dp">

    <ImageView
        android:id="@+id/img_play"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_gravity="center_vertical"
        android:layout_marginRight="16dp"
        android:layout_weight="3"
        android:visibility="visible"
        app:srcCompat="@drawable/image_7" />

    <LinearLayout
        android:id="@+id/view_play"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/item_artist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:text="Егор Крид"
            android:textColor="@android:color/black"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/item_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:text="Какае-то его песенка"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginTop="4dp"
            android:background="@color/vk_border_et"></LinearLayout>

    </LinearLayout>

    <ImageView
        android:id="@+id/img_more"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_weight="3"
        android:padding="4dp"
        app:srcCompat="@drawable/ic_file_download_black_24dp" />

</LinearLayout>